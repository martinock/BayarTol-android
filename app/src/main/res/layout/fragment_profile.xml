<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.upiki.bayartol.page.profile.ProfileFragment"
    android:background="@color/light_grey"
    android:paddingBottom="@dimen/_70dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_picture"
                android:layout_width="@dimen/_100dp"
                android:layout_height="@dimen/_100dp"
                android:clickable="true"
                android:src="@drawable/ic_profile"
                android:scaleType="centerCrop"
                app:border_color="@color/default_grey"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20dp"
                app:border_width="@dimen/_2dp"/>

            <ProgressBar
                android:id="@+id/profile_progress_bar"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:layout_below="@id/profile_picture"
                android:layout_marginTop="@dimen/_50dp"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_below="@id/profile_picture"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_50dp">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5dp"
                    tools:text="Silver Leoriar De Coolsten Mann IX"
                    android:textSize="@dimen/f_24sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5dp"
                    tools:text="silver@gmail.com"
                    android:textSize="@dimen/f_18sp"
                    android:gravity="center"
                    android:textColor="@color/default_grey"/>
                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5dp"
                    tools:text="08123456789"
                    android:textSize="@dimen/f_18sp"
                    android:gravity="center"
                    android:textColor="@color/default_grey"/>
                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Jl Cisitu Indah V no 26A"
                    android:textSize="@dimen/f_18sp"
                    android:gravity="center"
                    android:textColor="@color/default_grey"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
